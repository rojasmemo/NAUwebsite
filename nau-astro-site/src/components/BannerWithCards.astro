---
// src/components/BannerWithCards.astro
import SanityImage from './SanityImage.astro';
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Card {
  description: string;
  icon?: ImageMetadata; // El icono es ahora una propiedad opcional de la tarjeta
  iconAlt?: string;
}

interface Props {
  title: string;
  subtitle?: string;
  backgroundImage: any; // Objeto de imagen de Sanity
  cards: Card[];
  bottomText?: string;
  bottomIcon?: any; // Objeto de imagen de Sanity
}

const { title, subtitle, backgroundImage, cards, bottomText, bottomIcon } = Astro.props;
---

<section
  class="relative bg-cover bg-center bg-no-repeat pt-16 pb-24 md:pt-20 md:pb-32 lg:pt-24 lg:pb-40 text-center text-white"
>
  <SanityImage
    image={backgroundImage}
    alt="Fondo del banner"
    class="absolute inset-0 w-full h-full object-cover"
    loading="lazy"
    quality={80}
  />
  <div class="absolute inset-0 bg-black/40"></div>
  <div class="relative z-10 mx-auto w-full max-w-7xl px-4 sm:px-6 md:px-8 lg:px-10 xl:px-12">
    <h2 class="h2-base max-w-3xl mx-auto mb-4" set:html={title} />
    {subtitle && <h3 class="h3-base max-w-3xl mx-auto mb-20 md:mb-24">{subtitle}</h3>}

    <div class:list={["grid grid-cols-1 gap-12 md:grid-cols-3 md:gap-8 lg:gap-10 w-full", { "mt-16 md:mt-24": !subtitle }]}>
      {cards.map((card, index) => (
        <div class="relative rounded-lg bg-white p-6 pt-12 text-custom-specific-blue shadow-lg flex flex-col">
          {card.icon && (
            <div class="absolute -top-8 md:-top-10 lg:-top-12 left-1/2 -translate-x-1/2 transform">
              <Image
                src={card.icon}
                alt={card.iconAlt || `Icono de la tarjeta ${index + 1}`}
                class="h-16 w-16 md:h-18 md:w-18 lg:h-20 lg:w-20 object-contain"
                loading="lazy"
              />
            </div>
          )}
          <p class="p-base flex-grow text-left">{card.description}</p>
        </div>
      ))}
    </div>

    {bottomText && (
      <p class="p-base font-semibold max-w-4xl mx-auto mt-12 md:mt-16 text-white">
        {bottomText}
      </p>
    )}
  </div>

  {bottomIcon && (
    <div class="absolute -bottom-8 md:-bottom-12 lg:-bottom-16 left-1/2 w-full -translate-x-1/2 transform px-4">
      <div class="mx-auto w-16 h-16 md:w-24 md:h-24 lg:w-32 lg:h-32">
        <SanityImage image={bottomIcon} alt="Icono decorativo" sizes="(max-width: 767px) 64px, (max-width: 1023px) 112px, 160px" />
      </div>
    </div>
  )}
</section>
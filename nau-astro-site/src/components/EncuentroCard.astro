---
// src/components/EncuentroCard.astro
import SanityImage from './SanityImage.astro';
import { Image } from 'astro:assets';
import type { Image as SanityImageType } from 'sanity';

interface Props {
  image: SanityImageType;
  imageAlt?: string;
  icon: ImageMetadata;
  iconAlt?: string;
  title: string;
}

const { image, imageAlt, icon, iconAlt = "Icono representativo de NAU", title } = Astro.props;
---
<div class="relative flex flex-col rounded-lg text-custom-darker-teal h-full">
  <!-- Imagen de cabecera de la tarjeta -->
  {image && (
    <SanityImage 
      image={image} 
      alt={imageAlt || title}
      sizes="(max-width: 767px) 90vw, (max-width: 1024px) 45vw, 850px"
      class="w-full h-auto rounded-t-lg"
    />
  )}

  <!-- Icono posicionado en la parte superior de la tarjeta -->
  <Image 
    src={icon} 
    alt={iconAlt}
    class="absolute top-0 right-8 -translate-y-1/2 w-auto h-12 md:h-14 lg:h-16 z-10"
    loading="lazy"
  />

  <!-- Contenido textual de la tarjeta con padding propio -->
  <div class="bg-custom-frosty-teal p-6 md:p-7 lg:p-8 rounded-b-lg flex-grow">
    <h3 class="text-2xl font-semibold mb-3 text-custom-specific-blue">{title}</h3>
    <hr class="border-t-4 border-custom-gray-blue mb-6 md:mb-7 lg:mb-8">
    <slot />
  </div>
</div>

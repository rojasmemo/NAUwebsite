---
// src/pages/contacto.astro
import MainLayout from '../layouts/MainLayout.astro';
import ContactForm from '../components/ContactForm.astro';
import { sanityClient } from 'sanity:client';

const query = `*[_type == "paginaContacto"][0]{ title, description, heading }`;
const data = await sanityClient.fetch(query);

if (!data) {
  return new Response(null, { status: 404, statusText: 'Not Found' });
}
---

<MainLayout
  title={data.title}
  description={data.description}
  bodyClass="bg-white"
>
  <main>
    <section class="py-10">
      <div class="container mx-auto max-w-2xl p-4 sm:p-6 md:p-8 lg:p-10 xl:p-12 my-10 bg-white shadow-xl rounded-lg">
        <div class="text-center mb-6 md:mb-8">
          <h1 class="text-2xl sm:text-3xl md:text-4xl lg:text-5xl font-bold text-custom-darker-teal">{data.heading}</h1>
        </div>
        <ContactForm />
      </div>
    </section>
  </main>
</MainLayout>
---
// src/components/HeroBanner.astro
import SanityImage from './SanityImage.astro';
import type { Image as SanityImageType } from 'sanity';

interface Props {
  image: SanityImageType;
  alt: string;
  bgColorClass: string;
  loading?: 'eager' | 'lazy';
  containerClasses?: string;
}

const { image, alt, bgColorClass, loading = 'lazy', containerClasses = 'py-12 md:py-16 lg:py-24' } = Astro.props;
---
<section class:list={["hero-bg relative text-white text-center px-4", containerClasses]}>
  <div class="absolute top-0 left-0 w-full h-full -z-10">
    <SanityImage 
      image={image} 
      alt={alt}
      loading={loading}
      sizes="100vw"
      class:list={["w-full h-full object-cover", bgColorClass]}
    />
  </div>
  <div class="relative z-10 px-4 md:px-8">
    <slot />
  </div>
  <slot name="decoration" />
</section>
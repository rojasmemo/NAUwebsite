---
// src/components/SanityImage.astro
// Componente simplificado que recibe una URL de imagen ya construida.

interface Props {
  image: {
    url: string;
    alt?: string;
    width?: number;
    height?: number;
  };
  class?: string;
  noShadow?: boolean;
  loading?: 'lazy' | 'eager';
}

const { image, class: className, noShadow = false, loading = 'lazy' } = Astro.props;

if (!image?.url) {
  return null;
}

const altText = image.alt || 'Imagen descriptiva de NAU';

const imageClasses = [
  "w-full h-auto rounded-lg object-cover",
  !noShadow && "shadow-lg",
  className
].filter(Boolean).join(' ');
---

<img
  src={image.url}
  alt={altText}
  width={image.width}
  height={image.height}
  loading={loading}
  decoding="async"
  class={imageClasses}
/>

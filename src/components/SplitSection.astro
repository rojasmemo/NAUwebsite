---
// src/components/SplitSection.astro

interface Props {
  bgColorClass?: string;
  reverseOnMobile?: boolean;
}

const { 
  bgColorClass = 'bg-white',
  reverseOnMobile = false,
} = Astro.props;

const leftOrder = reverseOnMobile ? 'order-2 md:order-1' : 'order-1';
const rightOrder = reverseOnMobile ? 'order-1 md:order-2' : 'order-2';
---
<section class:list={["content-section-wrapper", bgColorClass]}>
  <div class="grid items-center md:grid-cols-2 gap-8 py-12 md:py-8 px-4 md:px-20"> 
    <div class:list={[leftOrder]}><slot name="left" /></div>
    <div class:list={[rightOrder]}><slot name="right" /></div>
  </div>
</section>